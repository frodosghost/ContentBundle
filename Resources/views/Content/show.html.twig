{% extends "ManhattanConsoleBundle::layout.html.twig" %}

{% block navbar %}{% endblock navbar %}

{% block content %}
<h1>Content</h1>

<table class="form-horizontal well">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ entity.body }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Meta_description</th>
            <td>{{ entity.metadescription }}</td>
        </tr>
        <tr>
            <th>Sitemap_display</th>
            <td>{{ entity.sitemapdisplay }}</td>
        </tr>
        <tr>
            <th>Sitemap_priority</th>
            <td>{{ entity.sitemappriority }}</td>
        </tr>
        <tr>
            <th>Html_title</th>
            <td>{{ entity.htmltitle }}</td>
        </tr>
        <tr>
            <th>Canonical_url</th>
            <td>{{ entity.canonicalurl }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated_at</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

    <div class="form-actions">
        <a href="{{ path('content') }}" class="btn">Back to the list</a>
        <a href="{{ path('content_edit', { 'id': entity.id }) }}" class="btn btn-primary">Edit</a>
        <form action="{{ path('content_delete', { 'id': entity.id }) }}" class="actions-delete" method="post">
            {{ form_row(delete_form.id) }}
            {{ form_rest(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}