{% extends "ManhattanConsoleBundle:Console:template.html.twig" %}

{% block title %}Console: Content | {{ entity.title }}{% endblock title %}
{% block template_title %}Console: Content | Edit Document{% endblock template_title %}
{% block breadcrumbs %}<li><a href="{{ path('console_index') }}">Console</a></li><li><a href="{{ path('console_content') }}">Content</a></li><li><a href="{{ path('console_content_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></li><li class="current"><a href="{{ path('console_content_documents', { 'id': entity.id }) }}">Documents</a></li>{% endblock breadcrumbs %}

{% block template_console %}

<div class="pure-g-r">
    <div class="pure-u-3-4">

        <div class="l-box">

            <form action="{{ path('console_content_document_update', { 'id': entity.content.id, 'document_id': entity.id }) }}" class ="pure-form pure-form-stacked" method="post" {{ form_enctype(edit_form) }} novalidate>
                {{ form_widget(edit_form) }}

                <div class="form-actions">
                    <a href="{{ path('console_content_documents', { 'id': entity.content.id }) }}" class="pure-button">Back to Documents</a>
                    <button type="submit" class="pure-button pure-button-primary">Save</button>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}<a href="{{ path('console_content_document_delete', { 'id': entity.content.id, 'document_id': entity.id }) }}" class="btn btn-danger">Remove</a>{% endif %}
                </div>
            </form>
        </div>
    </div>

</div>

{% endblock %}
