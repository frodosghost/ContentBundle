<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="content_single" pattern="/{slug}">
        <default key="_controller">ManhattanContentBundle:Public:oneSlug</default>
    </route>

    <route id="content_double" pattern="/{slug_one}/{slug_two}">
        <default key="_controller">ManhattanContentBundle:Public:twoSlug</default>
    </route>

</routes>

