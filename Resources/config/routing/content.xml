<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="console_content" pattern="/content">
        <default key="_controller">ManhattanContentBundle:Content:index</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_content_new" pattern="/content/new">
        <default key="_controller">ManhattanContentBundle:Content:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_content_create" pattern="/content/create">
        <default key="_controller">ManhattanContentBundle:Content:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_content_edit" pattern="/content/{id}/edit">
        <default key="_controller">ManhattanContentBundle:Content:edit</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_content_update" pattern="/content/{id}/update">
        <default key="_controller">ManhattanContentBundle:Content:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_content_delete" pattern="/content/{id}/delete">
        <default key="_controller">ManhattanContentBundle:Content:delete</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
