<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="console_content_documents" pattern="/{id}/documents">
        <default key="_controller">ManhattanContentBundle:Document:documents</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_content_document_create" pattern="/{id}/document/create">
        <default key="_controller">ManhattanContentBundle:Document:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_content_document_edit" pattern="/{id}/document/{document_id}/edit">
        <default key="_controller">ManhattanContentBundle:Document:edit</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_content_document_update" pattern="/{id}/document/{document_id}/update">
        <default key="_controller">ManhattanContentBundle:Document:update</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_content_document_delete" pattern="/{id}/document/{document_id}/delete">
        <default key="_controller">ManhattanContentBundle:Document:delete</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
